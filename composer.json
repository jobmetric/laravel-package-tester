{
    "name": "jobmetric/laravel-package-tester",
    "description": "This package is used to quickly test a package with all its components installed in Laravel.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "jobmetric",
        "laravel",
        "package",
        "workflow",
        "flow"
    ],
    "homepage": "https://jobmetric.github.io/packages/laravel-package-tester",
    "require": {
        "php": ">=8.0.1",
        "laravel/framework": ">=9.19",
        "jobmetric/laravel-package-core": "1.35",
        "jobmetric/package-tester-composer-plugin": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "JobMetric\\PackageTester\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JobMetric\\PackageTester\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "JobMetric\\PackageTester\\PackageTesterServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "support": {
        "issues": "https://github.com/jobmetric/laravel-package-tester/issues",
        "forum": "https://twitter.com/jobmetric",
        "source": "https://github.com/jobmetric/laravel-package-tester"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/majidmohammadian"
        }
    ],
    "authors": [
        {
            "name": "Majid Mohammadian",
            "email": "majeedmohammadian@gmail.com",
            "homepage": "https://www.linkedin.com/in/majidmohammadian/",
            "role": "Full Stack Developer"
        },
        {
            "name": "Matin Bagheri",
            "email": "themainmatin@gmail.com",
            "homepage": "https://www.linkedin.com/in/bagherimatin/",
            "role": "PHP Developer"
        }
    ]
}
